{
	"name": "silverorange/turing",
	"description": "Functional test framework for silverorange websites.",
	"type": "library",
	"keywords": [ "selenium", "test" ],
	"homepage": "https://github.com/silverorange/turing",
	"license": "LGPL-2.1",
	"authors": [
		{
			"name": "Charles Waddell",
			"email": "charles@silverorange.com"
		},
		{
			"name": "Michael Gauthier",
			"email": "mike@silverorange.com"
		},
		{
			"name": "Nick Burka",
			"email": "nick@silverorange.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://composer.silverorange.com"
		},
		{
			"packagist": false
		}
	],
	"require": {
		"php": ">=5.2.1",
		"ext-mbstring": "*",
		"phpunit/phpunit": "^5.7.0",
		"silverorange/site": "^7.3.0||^9.0.0",
		"silverorange/swat": "^5.0.0",
		"lmc/steward": "^2.1.0"
	},
	"require-dev": {
		"silverorange/coding-standard": "^1.0.0"
	},
	"scripts": {
		"lint": "./vendor/bin/phpcs",
		"post-install-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src",
		"post-update-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src"
	},
	"autoload": {
		"classmap": [ "Turing/" ],
		"psr-4": {
			"Silverorange\\Turing\\": "Turing/steward"
		}
	}
}
